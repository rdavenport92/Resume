{
	"compilerOptions": {
		"target": "esnext",
		"lib": ["dom", "esnext"],
		"jsx": "react-jsx",
		"module": "esnext",
		"moduleResolution": "node",
		"sourceMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": "./src",
		"paths": {
			"@components": ["components/"],
			"@providers": ["providers/"],
			"@views": ["views/"],
			"@layout": ["layout/"],
			"@utils": ["utils/"],
			"@types": ["types/"]
		}
	},
	"exclude": ["node_modules"]
}
